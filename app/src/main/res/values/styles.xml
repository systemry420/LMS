<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="elevation">8dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="cardTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_margin">@dimen/marginRight</item>
    </style>

    <style name="dangerButtonStyle" parent="buttonStyle">
        <item name="backgroundTint">#ff5555</item>
    </style>

    <style name="txtViewError">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/marginTop</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="roundedImage" parent="">
        <item name="backgroundTint">@color/white</item>
        <item name="background">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>